<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-light bg-dark">
        <div class="container">
          <a class="navbar-brand text-white" href="/">Bookers</a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
            <li>
            <%= link_to(user_path(current_user), class: "text-white btn") do %>
              <i class="fas fa-home text-white"></i> Home
            <% end %>
            </li>

            <li>
            <%= link_to(users_path, class: "text-white btn") do %>
              <i class="fas fa-users text-white"></i> Users
            <% end %>
            </li>

            <li>
            <%= link_to(books_path, class: "text-white btn") do %>
              <i class="fas fa-book-open text-white"></i> Books
            <% end %>
            </li>

            <li>
            <%= link_to(destroy_user_session_path, method: :delete, class: "text-white btn") do %>
              <i class="fas fa-sign-out-alt text-white"></i> Log out
            <% end %>
            </li>

            <% else %>
            <li class="nav-item">
            <%= link_to(root_path, class: "text-white btn") do %>
              <i class="fas fa-home text-white"></i> Home
            <% end %>
            </li>

            <li class="nav-item">
            <%= link_to(home_about_path, class: "text-white btn") do %>
              <i class="fas fa-link text-white"></i> About
            <% end %>
            </li>

            <li class="nav-item">
            <%= link_to(new_user_registration_path, class: "text-white btn") do %>
              <i class="fas fa-user-plus text-white"></i> Sign up
            <% end %>
            </li>

            <li class="nav-item">
            <%= link_to(new_user_session_path, class: "text-white btn") do %>
              <i class="fas fa-sign-in-alt text-white"></i> Log in
            <% end %>
            </li>

            <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <main>
      <div class="container px-5 px-sm-0">
      <% flash.each do |key, value| %>
        <%= content_tag(:div, value, class: "#{key}") %>
      <% end %>
        <%= yield %>
      </div>
      <div class="text-center mt-5">
        CopyRight Infratop.inc
      </div>
    </main>
  </body>

</html>
